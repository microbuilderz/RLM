MESSAGE(STATUS "Looking for OnixS")

#unset(OnixS_LIBRARY CACHE)
#unset(OnixS_INCLUDE_DIR CACHE)

FIND_PATH(OnixS_INCLUDE_DIR FIXEngine.h ${INCPATH}/OnixS)
SET(OnixS_NAMES ffCppFixEngine)
FIND_LIBRARY(OnixS_LIBRARY NAMES ${OnixS_NAMES} HPATHS /usr/lib/)

#MESSAGE(STATUS "OnixS_INCLUDE_DIR: ${OnixS_INCLUDE_DIR}")
#MESSAGE(STATUS "OnixS_LIBRARIES: ${OnixS_LIBRARIES}")

IF (OnixS_LIBRARY AND OnixS_INCLUDE_DIR)
    SET(OnixS_LIBRARIES ${OnixS_LIBRARY})
    SET(OnixS_INCLUDES ${OnixS_INCLUDE_DIR})
    SET(OnixS_FOUND "YES")
ELSE (OnixS_LIBRARY AND OnixS_INCLUDE_DIR)
    SET(OnixS_FOUND "NO")
ENDIF (OnixS_LIBRARY AND OnixS_INCLUDE_DIR)

IF (OnixS_FOUND)
    IF (NOT OnixS_FIND_QUIETLY)
        MESSAGE(STATUS "Found OnixS headers: ${OnixS_INCLUDE_DIR}")
        MESSAGE(STATUS "Found OnixS library: ${OnixS_LIBRARIES}")
    ENDIF (NOT OnixS_FIND_QUIETLY)
ELSE (OnixS_FOUND)
    IF (OnixS_FIND_REQUIRED)
        MESSAGE(FATAL_ERROR "Could not find OnixS library")
    ENDIF (OnixS_FIND_REQUIRED)
ENDIF (OnixS_FOUND)