MESSAGE(STATUS "Looking for openSSL")

FIND_PATH(SSL_INCLUDE_DIR ssl.h ${INCPATH}/openssl)
SET(SSL_NAMES ${SSL_NAMES} ssl)
FIND_LIBRARY(SSL_LIBRARY NAMES ${SSL_NAMES} HPATHS /usr/lib/x86_64-linux-gnu)

IF (SSL_LIBRARY AND SSL_INCLUDE_DIR)
    SET(SSL_LIBRARIES ${SSL_LIBRARY})
    SET(SSL_INCLUDES ${SSL_INCLUDE_DIR})
    SET(SSL_FOUND "YES")
ELSE (SSL_LIBRARY AND SSL_INCLUDE_DIR)
    SET(SSL_FOUND "NO")
ENDIF (SSL_LIBRARY AND SSL_INCLUDE_DIR)

IF (SSL_FOUND)
    IF (NOT SSL_FIND_QUIETLY)
        MESSAGE(STATUS "Found SSL headers: ${SSL_INCLUDE_DIR}")
        MESSAGE(STATUS "Found SSL library: ${SSL_LIBRARIES}")
    ENDIF (NOT SSL_FIND_QUIETLY)
ELSE (SSL_FOUND)
    IF (SSL_FIND_REQUIRED)
        MESSAGE(FATAL_ERROR "Could not find SSL library")
    ENDIF (SSL_FIND_REQUIRED)
ENDIF (SSL_FOUND)